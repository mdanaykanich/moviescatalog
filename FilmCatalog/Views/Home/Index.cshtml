@model FilmCatalog.Models.FilmGenreViewList

@{
    ViewBag.Title = "Головна";
}

<main role="main">

    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            @{
                @*<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>*@
                var i = 0;
                foreach (var f in Model.fgvl)
                {
                    if (i == 0)
                    {
                        <li data-target="#myCarousel" data-slide-to="@i" class="active"></li>
                    }
                    else
                    {
                        <li data-target="#myCarousel" data-slide-to="@i"></li>
                    }
                }
            }
        </ol>
        <div class="carousel-inner">
            @{
                var index = 0;
                var num = "";
                foreach (var film in Model.fgvl)
                {
                    switch (index)
                    {
                        case 0:
                            num = "first";
                            break;
                        case 1:
                            num = "second";
                            break;
                        case 2:
                            num = "third";
                            break;
                    }
                    if (index == 0)
                    {
                        <div class="carousel-item active">
                            <img style="display: flex; width: 100%" class="slide" src="@film.PosterBGPath" height="450" alt=@num +" slide">
                            <div class="container">
                                <div class="carousel-caption text-right">
                                    <h1>@film.Title</h1>
                                    <p style="font-size: 18pt">&laquo; @film.Description &raquo;</p>
                                    <p><a class="btn btn-lg btn-link" href='@Url.Action("Details", "Home", new { id = film.Id })' style="color: white" role="button">Більше &raquo;</a></p>
                                </div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img style="display: flex; width: 100%" class="slide" src="@film.PosterBGPath" height="450" alt=@num +" slide">
                            <div class="container">
                                <div class="carousel-caption text-right">
                                    <h1>@film.Title</h1>
                                    <p style="font-size: 18pt">&laquo; @film.Description &raquo;</p>
                                    <p><a class="btn btn-lg btn-link" href='@Url.Action("Details", "Home", new { id = film.Id })' style="color: white" role="button">Більше &raquo;</a></p>
                                </div>
                            </div>
                        </div>
                    }
                    index++;
                }

            }
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>


    <!-- Marketing messaging and featurettes
    ================================================== -->
    <!-- Wrap the rest of the page in another container to center all the content. -->

    <div class="container marketing" style="margin-top: 20px">
        <!-- Three columns of text below the carousel -->
        <div class="row">

            @{
                foreach (var film in Model.fgvl)
                {
                    <div class="col-lg-3" id="@film.Title">
                        <div style="width: 200px; margin: auto">
                            <a href='@Url.Action("Details", "Home", new { id = film.Id })'>
                                <img style="display: block; margin: auto" class="rounded-circle" src="@film.PosterPath" alt="Generic placeholder image" width="200" height="200">
                            </a>
                        </div>
                        <h5 style="text-align: center">@film.Title</h5>
                        <div style="text-align: center">
                            <span>@film.Year,&nbsp;</span>
                            <span style="font-style: italic">@film.Country</span>
                        </div>
                    </div>
                }
            }
        </div>

    </div>
</main>
